                - var alt = ['phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone']
                    each item, index in title
                        - var isActive = ( item === "Контурная пластика (Инъекционная коррекция)" );
                            li(class="mobile-categories__item" + (isActive ? " mobile-categories-item_active": ''))
                                span.mobile-categories__icon
                                    img(src=icons[index] alt = alt[index])
                                span(class='mobile-categories__text'+ (isActive ? " mobile-categories-text_active": ''))= item
