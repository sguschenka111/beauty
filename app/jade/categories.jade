doctype html
html(lang="ru")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content="IE=edge")
        title Beauty shop
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet'  href='css/normalize.css' )
        link(rel='stylesheet'  href='css/main.css' )
        link(href="https://fonts.googleapis.com/css?family=Roboto:300,400&amp;subset=cyrillic" rel="stylesheet")
        script(src="js/jquery-3.2.0.min.js" defer)
        script(src="js/hummer.js" defer)
        script(src="js/main.js" defer)
    body
        .mobile-wrapper
            .mobile-categories-selection
                header.mobile-title-section
                    .wrapper
                        h1.mobile-categories-title Категории
                        .mobile-close.mobile-close_position
                .mobile-menu-categories
                    ul.mobile-categories-list
                        - var title = ['Волосы – женский зал','Волосы – Мужской зал',' Услуги для детей','Маникюр','Педикюр','Солярий','Массаж','Аппаратная косметология','Косметологические услуги','СПА / SPA','Wellness ','Снижение веса и коррекция фигуры','Контурная пластика (Инъекционная коррекция)','Пластическая хирургия','Интимная пластика','Спортивные занятия','Дополнительные услуги']
                        - var icons = ['img/categories/woman.svg','img/categories/man.svg','img/categories/child.svg','img/categories/finger.svg','img/categories/foot.svg','img/categories/sun.svg','img/categories/back.svg','img/categories/air.svg','img/categories/mask.svg','img/categories/flower.svg','img/categories/x.svg','img/categories/doc.svg','img/categories/injector.svg','img/categories/brush.svg','img/categories/underpants.svg','img/categories/weight.svg','img/categories/plus.svg']
                        - var alt = ['phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone','phone']
                            each item, index in title
                                - var isActive = ( item === "Контурная пластика (Инъекционная коррекция)" );
                                    li(class="mobile-categories__item" + (isActive ? " mobile-categories-item_active": ''))
                                        span.mobile-categories__icon
                                            img(src=icons[index] alt = alt[index])
                                        span(class='mobile-categories__text'+ (isActive ? " mobile-categories-text_active": ''))= item
                                        if isActive
                                            .mobile-close2.mobile-close2_position



