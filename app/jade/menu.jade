.mobile-menu-emergence
    .mobile-menu-section
        .mobile-salon-search-header
            .wrapper
                form.mobile-salon-search-form
                    input(name="search-salon" type="text" placeholder="Введите название салона").mobile-salon-search-form__input
                    input(name="search-salon-submit" type="submit" value="" ).mobile-salon-search-form__submit
                .mobile-close.mobile-close_position-menu.mobile-close_menu-js
                    img(src="img/close-white.png" alt="Закрыть" width="15"
    height="15").mobile-close__img
        .mobile-salon-menu
            .wrapper
                ul.mobile-salon-menu-list
                    - var salon = ["Каталог","Скидки","Новости","Статьи","Бренды","Работа","Объявления","О проекте","Контакты"]
                    each item in salon
                        li.mobile-salon-menu__item
                            a(href="#").mobile-salon-menu__link= item
             