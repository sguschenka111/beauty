                li.mobile-metro-menu__item.mobile-metro-item_toggle
                    span.mobile-metro-menu__arrow
                    span.mobile-metro-menu__name.mobile-metro_color-orange Калужско-Рижская
                        ul.mobile-metro-menu-2level.mobile-metro-menu-2level_js
                            - var menu2 = ["Киевская","Краснопресненская"]
                            each item in menu2
                                li.mobile-metro-menu-2level__item
                                    span.mobile-metro-menu-2level__name.mobile-metro_color-orange.mobile-metro_smallCircle= item
                li.mobile-metro-menu__item.mobile-metro-item_toggle
                    span.mobile-metro-menu__arrow
                    span.mobile-metro-menu__name.mobile-metro_color-pink Таганско-Краснопресненская
                        ul.mobile-metro-menu-2level.mobile-metro-menu-2level_js
                            - var menu2 = ["Киевская","Краснопресненская"]
                            each item in menu2
                                li.mobile-metro-menu-2level__item
                                    span.mobile-metro-menu-2level__name.mobile-metro_color-pink.mobile-metro_smallCircle= item
                li.mobile-metro-menu__item.mobile-metro-item_toggle
                    span.mobile-metro-menu__arrow
                    span.mobile-metro-menu__name.mobile-metro_color-yellow Калининско-Солнцевская
                li.mobile-metro-menu__item.mobile-metro-item_toggle
